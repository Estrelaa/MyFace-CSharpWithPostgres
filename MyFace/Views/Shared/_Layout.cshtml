@using MyFace.Helpers
@using MyFace.DataAccess
<!DOCTYPE html>
<html>
@{ string username = User?.Identity?.Name;
    var Users = new UserRepository();
    string fullname = Users.GetFullName(username);
    }
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<nav>
    <div class="nav-inner">
        @Html.ActionLink($"Galaxy", "Index", "Home", "",new { @class = "nav-link" })
        @if (!string.IsNullOrEmpty(username))
        {
            @Html.ActionLink($"Users", "Index", "UserList", "",new { @class = "nav-link" })

            <div class="nav-align-right">
                @Html.ActionLink($"{username} / {fullname}", "Index", "Wall", new { username = username, fullname = fullname },new { @class = "nav-link" })
            </div>
        }
    </div>
</nav>
@RenderBody()
</body>
</html>
